<div class="container py-5 mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-5">
      
      <!-- Carte du formulaire -->
      <div class="bg-white p-5 rounded-4 shadow-sm text-center">
        <h2 class="fw-bold mb-4">Create a new list</h2>
        
        <%= simple_form_for(@list) do |f| %>
          <div class="form-inputs text-start">
            <%= f.input :name, 
                label: false, 
                placeholder: "e.g. Superhero movies",
                input_html: { 
                  class: "form-control-lg rounded-4 bg-light border-0 px-3",
                  style: "font-size: 16px;" 
                } %>
          </div>

          <div class="form-actions mt-4">
            <!-- Bouton Noir Apple large -->
            <%= f.button :submit, "Create list", class: "btn-apple-black w-100 py-3 rounded-pill" %>
          </div>
        <% end %>
        
        <div class="mt-4">
          <%= link_to "Cancel", lists_path, class: "text-muted text-decoration-none small" %>
        </div>
      </div>

    </div>
  </div>
</div>
