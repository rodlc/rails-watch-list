<div class="banner" style="background-position: center !important; background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80');">

  <div class="container">
    <h1>Save any kind of movies</h1>
    <p class="lead opacity-75">Create lists, add bookmarks, and share your passion.</p>
  </div>
</div>

<div class="container py-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">ğŸ¿ Lists</h2>
  </div>

  <div class="row g-4">
    <% @lists.each do |list| %>
      <div class="col-12 col-md-6 col-lg-4">
        <% 
          # Logique Image : Soit le poster du 1er film, soit un dÃ©gradÃ©
          if list.movies.any?
            bg = "url('#{list.movies.first.poster_url}')"
          else
            bg = "linear-gradient(45deg, #4facfe 0%, #00f2fe 100%)"
          end
        %>
        
        <%= link_to list_path(list), class: "card-category", style: "background-image: #{bg}" do %>
          <span><%= list.name %></span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
